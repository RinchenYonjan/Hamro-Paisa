@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Enter Your Name</MudText>
        <MudTextField @bind-Value="UserInput" Label="Name" Placeholder="Enter your name" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary">OK</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    private string UserInput { get; set; }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(UserInput));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
