@page "/dept"
@inject IDialogService DialogService

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My MAUI App</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>

    <div class="user-section">

        <div class="search-bar">
            <form action="/search" method="get">
                <input type="search" name="query" placeholder="Search here..." required>
                <button type="submit">Search</button>
            </form>
        </div>

        <!-- Top Button containers -->
        <div class="button-container">
            <MudButton OnClick="OpenDialog">Add</MudButton>
            <button id="buttonSort">Sort</button>
            <button id="buttonAsc">Ascending</button>
            <button id="buttonDes">Decending</button>
        </div>

    </div>

    <!-- List container -->
    <div class="unique-container">
        <div class="unqiue-list">
            <h3>Recent Depts</h3>
        </div>
    </div>

</body>
</html>

@code {

    // Add button code
    private async Task OpenDialog()
    {
        // Define dialog options
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium };

        // Show the dialog
        var dialog = DialogService.Show<CustomDialog>("Custom Dialog", options);

        // Await the dialog result
        var result = await dialog.Result;

        // Handle cancellation or data retrieval
        if (result == null) // If result is null, the dialog was canceled
        {
            Console.WriteLine("Dialog was canceled.");
        }
        else
        {
            // Access the data returned from the dialog
            var userInput = result.Data;
            Console.WriteLine($"User entered: {userInput}");

        }
    }


}
