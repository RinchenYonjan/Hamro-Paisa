@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DrawerToogle" />
        Hamro Paisa
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="15">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Navigation Menu</MudText>
        </MudDrawerHeader>
        <MudDrawerContainer>
            <NavMenu />    
        </MudDrawerContainer>   
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code{
    bool _drawerOpen = true;

    void DrawerToogle()
    {
        _drawerOpen = !_drawerOpen;
    }

}

